import pandas as pd

# Step 1: Load Dataset
df = pd.read_csv("facebook_metrics.csv")
print("Original Data:\n", df)

# Step 2: Subset specific columns
subset_df = df[["Post_ID", "Type", "Likes"]]
print("\nSubset Columns:\n", subset_df)

# Step 3: Sort by Likes (descending)
sorted_df = df.sort_values(by="Likes", ascending=False)
print("\nSorted by Likes:\n", sorted_df)

# Step 4: Transpose the DataFrame
transposed_df = df.T
print("\nTransposed Data:\n", transposed_df)

# Step 5: Merge with another sample DataFrame (e.g., Post performance tags)
performance_df = pd.DataFrame({
    "Post_ID": [1, 2, 3],
    "Performance": ["High", "Low", "High"]
})
merged_df = pd.merge(df, performance_df, on="Post_ID")
print("\nMerged with Performance Tags:\n", merged_df)
