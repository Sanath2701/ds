pip install requests beautifulsoup4
import requests
from bs4 import BeautifulSoup

# URL of the ecommerce product page
url = 'https://example.com/product-reviews'

# Send HTTP request to fetch the page content
response = requests.get(url)
soup = BeautifulSoup(response.content, 'html.parser')

# Extract reviews, comments, and customer names
reviews = soup.find_all('div', class_='review')

for review in reviews:
    customer_name = review.find('span', class_='customer-name').text
    comment = review.find('p', class_='review-comment').text
    rating = review.find('span', class_='rating').text
    print(f"Customer: {customer_name}, Rating: {rating}, Comment: {comment}")
